<Window x:Class="HistoryMapQuiz.PassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HistoryMapQuiz"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"  Icon="Icon/Icon.jpg" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock FontFamily="Arial" FontSize="12" x:Name="TextInfo">Введите пароль:</TextBlock>
        <TextBox VerticalAlignment="Center" FontFamily="Arial" FontSize="12" Name="passwordBox" Grid.Row="1" MinWidth="300" MaxLength="30"></TextBox>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Background="AliceBlue" IsDefault="True" FontFamily="Arial" FontSize="12" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
            <Button  Background="AliceBlue" IsCancel="True" FontFamily="Arial" FontSize="12" MinWidth="60">Отмена</Button>
        </WrapPanel>

    </Grid>
</Window>
