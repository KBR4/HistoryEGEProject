<Window x:Class="HistProjTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HistProjTemplate"
        mc:Ignorable="d"
        Title="ЕГЭ по истории" Height="800" Width="800" WindowState="Maximized">

    <DockPanel>
        <Menu FontSize="16" FontFamily="Verdana" Padding="20" DockPanel.Dock="Top">
            <MenuItem Header="Выбрать тест" Click="OpenSelectionWindow"></MenuItem>
            <MenuItem Header="Добавить" Click="MenuItem_Click">
                <MenuItem Header="Раздел" Click="AddSection_Click"></MenuItem>
                <MenuItem Header="Карту" Click="AddMap_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Настройки" Click="Settings"></MenuItem>
            <MenuItem Header="Выйти" Click ="Exit"/>
        </Menu>
        <WrapPanel x:Name="MainCanvas" Orientation="Vertical" VerticalAlignment="Stretch">
            
        </WrapPanel>
    </DockPanel>
</Window>
